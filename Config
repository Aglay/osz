# --- common configuration ---
# x86_64 or AArch64
ARCH = x86_64
# x86_64: ibmpc, acpi AArch64: rpi
PLATFORM = ibmpc
DEBUG = 1
OPTIMIZE = 0

# --- disk layout ---
#setting this to 1 will create a partition for root fs instead of initrd file
NOINITRD = 0
#with initrd file, the format: fsz, crc, newc, hpodc, tar
INITRDFMT = fsz
#size of partitions in kilobytes
#EFI doesn't like ESP partitions smaller than 1024k
ESPSIZE = 2048
USRSIZE = 768
VARSIZE = 4
HOMESIZE = 4

# --- build system ---
#CC=/usr/local/bin/$(ARCH)-tcc
