// BOOTBOOT Options
// this file has to be 4096 bytes long.

// requested screen dimension
width=800
height=600

// elf binary to load
kernel=lib/sys/core

// number of pages to store free physical memory fragments
nrphymax=2

// number of pages for message queue
nrmqmax=1

// number of pages for service pid translation
nrsrvmax=1

// scheduler quantum. A task can run 
// continuously up to 1/quantum secs.
quantum=10

// maximum frame rate of the compositor
fps=20

// what to debug, decimal number or comma separated list of:
//  mm = memory map, th = threads, el = elf loading,
//  ri = run-time linker imports, re = run-time exports
//  ir = IRQ Routing Table, de = devices, sc = scheduler
//  ms = messaging, ma = memory allocation, lo = print out system log
//  te = run tests instead of init
debug=te

// display transformation type, decimal number 0-3 or one of:
//  0 mc = mono channel, rgb color
//  1 sm = stereo channels, grayscale red-cyan
//  2 sc = stereo channels, rgb color
display=0
//lefthanded=true

// select clock source
//  0 autodetect, 1 hpet, 2 pit, 3 rtc
clock=pit

// start rescue shell
rescueshell=true
